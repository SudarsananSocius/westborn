<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="0">

        <!-- Admin: Can access all product categories -->
        <record id="product_category_rule_admin" model="ir.rule">
            <field name="name">Product Category: Full Access for Admin</field>
            <field name="model_id" ref="product.model_product_template"/>
            <field name="domain_force">[(1, '=', 1)]</field>
            <field name="groups" eval="[(4, ref('westborn.group_beneficiary_admin'))]"/>
            <field name="perm_read" eval="True"/>
            <field name="perm_write" eval="True"/>
            <field name="perm_create" eval="True"/>
            <field name="perm_unlink" eval="True"/>
        </record>

        <!-- Referrer: Can access Goods & Services categories -->
        <record id="product_category_rule_referrer" model="ir.rule">
            <field name="name">Product Category: Goods and Services for Referrer</field>
            <field name="model_id" ref="product.model_product_template"/>
            <field name="domain_force"
                   eval="[
                '|',
                ('categ_id', '=', ref('product.product_category_services')),
                ('categ_id', '=', ref('product.product_category_goods'))
                ]"
            />
            <field name="groups" eval="[(4, ref('westborn.group_referrer_user'))]"/>
            <field name="perm_read" eval="True"/>
            <field name="perm_write" eval="False"/>
            <field name="perm_create" eval="False"/>
            <field name="perm_unlink" eval="False"/>
        </record>

        <!-- Beneficiary: Can access Services only -->
        <record id="product_category_rule_beneficiary" model="ir.rule">
            <field name="name">Product Category: Services for Beneficiary</field>
            <field name="model_id" ref="product.model_product_template"/>
            <field name="domain_force" eval="[('categ_id', '=', ref('product.product_category_services'))]"/>
            <field name="groups" eval="[(4, ref('westborn.group_beneficiary_user'))]"/>
            <field name="perm_read" eval="True"/>
            <field name="perm_write" eval="False"/>
            <field name="perm_create" eval="False"/>
            <field name="perm_unlink" eval="False"/>
        </record>

    </data>
</odoo>