<?xml version="1.0" encoding="utf-8"?>
<templates xml:space="preserve">
    <t t-name="website_sale.cartLine_inherit" t-inherit="website_sale.cartLine" t-inherit-mode="extension">
        <xpath expr="//div[1]" position="after">
            <t t-if="line.credit_points">
                <div class="oe_product_credit_value mt-1 text-muted small">
                    <span t-out="line.credit_points"/> <span>Credit</span>
                </div>
            </t>
        </xpath>
    </t>
</templates>
