<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="product_template_inherit_view" model="ir.ui.view">
        <field name="name">product.template.inherit.view</field>
        <field name="model">product.template</field>
        <field name="inherit_id" ref="product.product_template_only_form_view"/>
        <field name="arch" type="xml">
            <xpath expr="//group[@name='group_standard_price']//div[@name='list_price_uom']" position="after">
                <label for="credit_value"/>
                <div name="credit_value">
                    <field name="credit_value" class="oe_inline" />
                </div>
            </xpath>
            <xpath expr="//field[@name='list_price']" position="attributes">
                <attribute name="groups" >westborn.group_beneficiary_admin</attribute>
            </xpath>
        </field>
    </record>
    

</odoo>
