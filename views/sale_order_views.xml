<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="sale_order_inherit_view_westborn" model="ir.ui.view">
        <field name="name">sale.order.inherit.view</field>
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale.view_order_form"/>
        <field name="arch" type="xml">
            <xpath expr="//form//field[@name='order_line']//list//field[@name='product_template_id']" position="after">
                <field name="is_group_user" />
            </xpath>
            <xpath expr="//form//field[@name='order_line']//list//field[@name='price_unit']" position="after">
                <field name="credit_points" readonly="1"/>
            </xpath>
            <!-- <xpath expr="//form//field[@name='order_line']//list//field[@name='price_unit']" position="attributes">
                <attribute name="column_invisible" >not is_group_user</attribute>
            </xpath>
            <xpath expr="//form//field[@name='order_line']//list//field[@name='price_subtotal']" position="attributes">
                <attribute name="column_invisible" >not is_group_user</attribute>
            </xpath> -->
        </field>
    </record>
</odoo>
